<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Mobile Testing Suite" parallel="false" thread-count="1" verbose="1">
    
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <test name="Mobile App Tests" preserve-order="true">
        <classes>
            <class name="tests.SampleTests">
                <methods>
                    <include name="testAppLaunch"/>
                    <include name="testDeviceCapabilities"/>
                    <include name="testScreenDimensions"/>
                    <include name="testPageObjectModel"/>
                    <include name="testSessionManagement"/>
                    <include name="testBrowserStackIntegration"/>
                    <include name="testElementInteraction"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
